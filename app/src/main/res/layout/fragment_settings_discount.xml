<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/settingsDiscountFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".viewLayer.SettingsDiscountFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/settingsDiscountInfo"
        android:gravity="center"

        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:textSize="30sp"
        android:textColor="@color/black"
        android:text="This is your current discount" />

    <TextView
        android:layout_marginTop="50dp"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/settingsDiscountInfo"
        android:id="@+id/settingsDiscountValue"
        android:textSize="48sp"
        android:textColor="@color/accept"
        android:text="38%" />

</RelativeLayout>