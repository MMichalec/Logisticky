<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".viewLayer.settingsVersionFragment">

    <!-- TODO: Update blank fragment layout -->


    <ProgressBar
        android:id="@+id/permissionsLoader"
        style="?android:attr/progressBarStyle"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="35dp"
        android:layout_centerInParent="true"
        android:layout_below="@id/permissionText"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/permissionText"
        android:gravity="center"

        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:textSize="30sp"
        android:textColor="@color/black"
        android:text="Permissions"
        android:textStyle="bold"/>

    <TextView
        android:layout_marginTop="50dp"
        android:textAlignment="center"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/permissionText"
        android:id="@+id/settingsPermissions"
        android:textSize="48sp"
        android:textColor="@color/accept"
        android:text="-" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/commentBoxInfo"
        android:gravity="center"
android:layout_below="@id/settingsPermissions"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:text="Write your request in box below"
        />

    <EditText
        android:id="@+id/settingsPermissionsRequestComment"
        android:layout_width="325dp"
        android:layout_height="139dp"
        android:paddingTop="30dp"
        android:paddingBottom="30dp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:hint="Write your request here"
        android:layout_below="@+id/commentBoxInfo"
        android:layout_centerInParent="true"
        android:layout_marginTop="25dp"
        android:background="@drawable/rounded_textview2"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine" />

    <Button
        android:id="@+id/settingsPermissionsSendRequestButton"
        android:layout_width="match_parent"
        android:layout_margin="20dp"
        android:layout_height="48dp"
        android:backgroundTint="@color/accept"
        android:text="Send request"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>